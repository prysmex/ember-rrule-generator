{{#if (has-block)}}
  {{yield
    (hash
      hourly=@hourly
      handleChange=this.handleChange
      value=@hourly.interval
      id=@id
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |HourlyComponent|}}
      <HourlyComponent
        @id={{@id}}
        id={{@id}}
        name={{@name}}
        @name={{@name}}
        @hourly={{@hourly}}
        @value={{@hourly.interval}}
        @handleChange={{this.handleChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}