{{#if (has-block)}}
  {{yield (hash id=@id name=@name value=@value handleChange=this.handleChange)}}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |HourlyIntervalComponent|}}
      <HourlyIntervalComponent
        @id={{@id}}
        id={{@id}}
        name={{@name}}
        @name={{@name}}
        @value={{@value}}
        @handleChange={{this.handleChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}