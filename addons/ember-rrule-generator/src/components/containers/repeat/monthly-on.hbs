{{#let
  (hash
    Day=(component
      this.MonthlyOnDay
      id=(concat @id "-day")
      value=@on.day
      handleChange=@handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
    )
  )
  as |MonthlyOn|
}}

  {{#if (has-block)}}
    {{yield MonthlyOn}}
  {{else}}
    {{#let (component @view) as |MonthlyOnComponent|}}
      <MonthlyOnComponent @monthlyOnApi={{MonthlyOn}} />
    {{/let}}
  {{/if}}
{{/let}}