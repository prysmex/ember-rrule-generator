{{#let
  (hash
    Day=(component
      this.MonthlyOnDay
      id=(concat @id "-day")
      value=@on.day
      handleChange=@handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
      translations=@translations
    )
    translations=@translations
    handleChange=@handleChange
  )
  as |On|
}}

  {{#if (has-block)}}
    {{yield On}}
  {{else}}
    {{#let (component @view) as |MonthlyOnComponent|}}
      <MonthlyOnComponent @On={{On}} ...attributes />
    {{/let}}
  {{/if}}
{{/let}}