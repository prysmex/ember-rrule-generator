{{#if (has-block)}}
  {{yield (hash id=@id name=@name value=@value handleChange=this.onDaysChange)}}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |WeeklyIntervalComponent|}}
      <WeeklyIntervalComponent
        @id={{@id}}
        id={{@id}}
        name={{@name}}
        @name={{@name}}
        @value={{@value}}
				@days={{@days}}
        @handleChange={{this.onDaysChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}