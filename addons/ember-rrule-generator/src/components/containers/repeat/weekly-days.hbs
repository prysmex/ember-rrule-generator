{{#if (has-block)}}
  {{yield
    (hash
      id=@id
      name=@name
      value=@value
      handleChange=this.onDaysChange
      translations=@translations
      labels=@labels
      isDisabled=@isDisabled
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |WeeklyIntervalComponent|}}
      <WeeklyIntervalComponent
        @id={{@id}}
        id={{@id}}
        name={{@name}}
        @name={{@name}}
        @value={{@value}}
        @isDisabled={{@isDisabled}}
        @days={{@days}}
        @handleChange={{this.onDaysChange}}
        @translations={{@translations}}
        @labels={{@labels}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}