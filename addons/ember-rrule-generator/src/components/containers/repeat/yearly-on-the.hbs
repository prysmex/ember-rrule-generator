{{#if (has-block)}}
  {{yield
    (hash
      isActive=@isActive
      handleChange=this.handleChange
      value="on the"
      id=@id
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |MonthlyComponent|}}
      <MonthlyComponent
        @id={{@id}}
        id={{@id}}
        @monthly={{@monthly}}
        @value={{@monthly.interval}}
        @handleChange={{this.handleChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}