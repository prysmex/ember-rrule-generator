{{#let
  (hash
    Which=(component
      this.YearlyOnTheWhich
      id=(concat @id "-which")
      value=@onThe.which
      handleChange=@handleChange
      name=(concat @name ".which")
      options=this.whichs
      isActive=@isActive
      translations=@translations
    )
    Month=(component
      this.YearlyOnTheMonth
      id=(concat @id "-month")
      value=@onThe.month
      handleChange=@handleChange
      name=(concat @name ".month")
      options=this.months
      isActive=@isActive
      translations=@translations
    )
    Day=(component
      this.YearlyOnTheDay
      id=(concat @id "-day")
      value=@onThe.day
      handleChange=@handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
      translations=@translations
    )
    name=@name
    translations=@translations
    handleChange=@handleChange
  )
  as |OnThe|
}}
  {{#if (has-block)}}
    {{yield OnThe}}
  {{else}}
    {{#let (component @view) as |YearlyOnTheComponent|}}
      <YearlyOnTheComponent @OnThe={{OnThe}} ...attributes />
    {{/let}}
  {{/if}}

{{/let}}