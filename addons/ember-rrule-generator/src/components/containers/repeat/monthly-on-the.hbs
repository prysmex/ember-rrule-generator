{{#let
  (hash
    Which=(component
      this.MonthlyOnTheWhich
      id=(concat @id "-which")
      value=@onThe.which
      handleChange=this.handleChange
      name=(concat @name ".which")
      options=this.whichs
      isActive=@isActive
    )
    Day=(component
      this.MonthlyOnTheDay
      id=(concat @id "-day")
      value=@onThe.day
      handleChange=this.handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
    )
  )
  as |MonthlyOnThe|
}}
  {{#if (has-block)}}
    {{yield MonthlyOnThe}}
  {{else}}
    {{#let (component @view) as |MonthlyOnTheComponent|}}
      <MonthlyOnTheComponent monthlyOnTheApi={{MonthlyOnThe}} />
    {{/let}}
  {{/if}}
{{/let}}