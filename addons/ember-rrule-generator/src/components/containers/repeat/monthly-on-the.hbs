{{yield
  (hash
    Which=(component
      this.MonthlyOnTheWhich
      id=(concat @id "-which")
      value=@onThe.which
      handleChange=@handleChange
      name=(concat @name ".which")
      options=this.whichs
      isActive=@isActive
    )
    Day=(component
      this.MonthlyOnTheDay
      id=(concat @id "-day")
      value=@onThe.day
      handleChange=@handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
    )
  )
}}