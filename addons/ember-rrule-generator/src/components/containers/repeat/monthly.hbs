{{#let
  (hash
    Select=(component
      this.MonthlySelectMode
      id=(concat @id "-select")
      options=this.availableOptions
      value=@monthly.mode
      handleChange=@handleChange
      name=(concat @name ".mode")
    )
    Interval=(component
      this.MonthlyInterval
      id=(concat @id "-interval")
      value=@monthly.interval
      handleChange=@handleChange
      name=(concat @name ".interval")
    )
  )
  as |MonthlyBase|
}}
  {{#let
    (this.merge
      MonthlyBase
      (if
        (this.isOptionAvailable "on" @monthly.options)
        (hash
          On=(component
            this.MonthlyOn
            id=(concat @id "-on")
            mode=@monthly.mode
            on=@monthly.on
            hasMoreModes=(this.isNotTheOnlyMode "on")
            handleChange=@handleChange
            isActive=(this.isModeActive @monthly.mode "on")
            name=(concat @name ".on")
          )
          IsOnActive=(this.isModeActive @monthly.mode "on")
        )
      )
      (if
        (this.isOptionAvailable "on the" @monthly.options)
        (hash
          OnThe=(component
            this.MonthlyOnThe
            id=(concat @id "-onThe")
            mode=@monthly.mode
            hasMoreModes=(this.isNotTheOnlyMode "on the")
            onThe=@monthly.onThe
            handleChange=@handleChange
            isActive=(this.isModeActive @monthly.mode "on the")
            name=(concat @name ".onThe")
          )
          IsOnTheActive=(this.isModeActive @monthly.mode "on the")
        )
      )
    )
    as |Monthly|
  }}
    {{#if (has-block)}}
      {{yield Monthly}}
    {{else}}
      {{#let (component @view) as |MonthlyComponent|}}
        <MonthlyComponent @monthlyApi={{Monthly}} ...attributes/>
      {{/let}}
    {{/if}}
  {{/let}}
{{/let}}