{{#let
  (hash
    Month=(component
      this.YearlyOnMonth
      id=(concat @id "-month")
      value=@on.month
      handleChange=@handleChange
      name=(concat @name ".month")
      options=this.months
      isActive=@isActive
      translations=@translations
      labels=@labels
      isDisabled=@isDisabled
    )
    Day=(component
      this.YearlyOnDay
      id=(concat @id "-day")
      value=@on.day
      handleChange=@handleChange
      name=(concat @name ".day")
      options=this.days
      isActive=@isActive
      translations=@translations
      labels=@labels
      isDisabled=@isDisabled
    )
    isDisabled=@isDisabled
    labels=@labels
    name=@name
    translations=@translations
    handleChange=@handleChange
  )
  as |On|
}}

  {{#if (has-block)}}

    {{yield On}}
  {{else}}
    {{#let (component @view) as |YearlyOnComponent|}}
      <YearlyOnComponent @On={{On}} ...attributes />
    {{/let}}
  {{/if}}

{{/let}}