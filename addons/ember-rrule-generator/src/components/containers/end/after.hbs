{{#if (has-block)}}
  {{yield (hash handleChange=this.handleChange after=@after id=@id name=@name)}}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |AfterComponent|}}
      <AfterComponent
        @id={{@id}}
        id={{@id}}
        @name={{@name}}
        name={{@name}}
        @after={{@after}}
        @handleChange={{this.handleChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}