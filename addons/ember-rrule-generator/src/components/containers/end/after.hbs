{{#if (has-block)}}
  {{yield
    (hash
      handleChange=this.numericalFieldHandler
      after=@after
      id=@id
      name=@name
      translations=@translations
      labels=@labels
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |AfterComponent|}}
      <AfterComponent
        @id={{@id}}
        id={{@id}}
        @name={{@name}}
        name={{@name}}
        @after={{@after}}
        @handleChange={{this.numericalFieldHandler}}
        @translations={{@translations}}
        @labels={{@labels}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}