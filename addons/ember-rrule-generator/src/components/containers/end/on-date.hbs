{{#if (has-block)}}
  {{yield
    (hash
      handleChange=this.handleDateChange
      onDate=@onDate
      value=@onDate.date
      id=@id
      name=(concat @name ".date")
      translations=@translations
      labels=@labels
      isDisabled=@isDisabled
      dateFormatting=this.dateFormat
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |OnDateComponent|}}
      <OnDateComponent
        @id={{@id}}
        id={{@id}}
        @name={{concat @name ".date"}}
        name={{concat @name ".date"}}
        @value={{@onDate.date}}
        @dateFormatting={{this.dateFormat}}
        @isDisabled={{@isDisabled}}
        @handleChange={{this.handleDateChange}}
        @translations={{@translations}}
        @labels={{@labels}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}