{{yield
  (hash
    Select=(component
      this.SelectMode
      id=(concat @id "-select")
      options=this.availableOptions
      value=@end.mode
      handleChange=@handleChange
      name=(concat @name ".mode")
    )
  )
}}

{{#if (this.isOptionSelected "After" @end.mode)}}
  {{yield
    (hash
      After=(component
        this.After
        id=(concat @id "-after")
        after=@end.after
        handleChange=@handleChange
        name=(concat @name ".after")
      )
    )
  }}
{{/if}}

{{#if (this.isOptionSelected "On date" @end.mode)}}
  {{yield
    (hash
      OnDate=(component
        this.OnDate
        id=(concat @id "-onDate")
        onDate=@end.onDate
        handleChange=@handleChange
        name=(concat @name ".onDate.date")
      )
    )
  }}
{{/if}}