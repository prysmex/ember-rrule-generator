{{#let
  (hash
    Select=(component
      this.SelectMode
      id=(concat @id "-select")
      options=this.availableOptions
      value=@end.mode
      handleChange=@handleChange
      name=(concat @name ".mode")
      translations=@translations
    )
    handleChange=@handleChange
    translations=@translations
  )
  as |EndBase|
}}
  {{#let
    (this.merge
      EndBase
      (if
        (this.isOptionSelected "After" @end.mode)
        (hash
          After=(component
            this.After
            id=(concat @id "-after")
            after=@end.after
            handleChange=@handleChange
            name=(concat @name ".after")
            translations=@translations
          )
        )
      )
      (if
        (this.isOptionSelected "On date" @end.mode)
        (hash
          OnDate=(component
            this.OnDate
            id=(concat @id "-onDate")
            onDate=@end.onDate
            handleChange=@handleChange
            name=(concat @name ".onDate")
            translations=@translations
          )
        )
      )
    )
    as |End|
  }}
    {{#if (has-block)}}
      {{yield End}}
    {{else}}
      {{#let (component @view) as |EndComponent|}}
        <EndComponent @End={{End}} ...attributes />
      {{/let}}
    {{/if}}
  {{/let}}
{{/let}}