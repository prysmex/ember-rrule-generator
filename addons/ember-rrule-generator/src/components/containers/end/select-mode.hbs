{{#if (has-block)}}
  {{yield
    (hash options=@options handleChange=this.handleChange value=@value id=@id)
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |SelectComponent|}}
      <SelectComponent
        @id={{@id}}
				id={{@id}}
        @options={{@options}}
        @value={{@value}}
        @handleChange={{this.handleChange}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}