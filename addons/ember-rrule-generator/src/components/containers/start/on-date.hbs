{{#if (has-block)}}
  {{yield
    (hash
      handleChange=@handleChange
      onDate=@onDate
      id=@id
      translations=@translations
      labels=@labels
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |OnDateComponent|}}
      <OnDateComponent
        @id={{@id}}
        id={{@id}}
        @name={{@name}}
        name={{@name}}
        @onDate={{@onDate}}
        @handleChange={{@handleChange}}
        @translations={{@translations}}
        @labels={{@labels}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}