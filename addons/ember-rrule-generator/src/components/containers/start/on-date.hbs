{{#if (has-block)}}
  {{yield
    (hash
      handleChange=this.handleChange
      dateFormat=this.dateFormat
      onDate=@onDate
      id=@id
      translations=@translations
      labels=@labels
      isDisabled=@isDisabled
      name=@name
    )
  }}
{{else}}
  {{#if @view}}
    {{#let (component @view) as |OnDateComponent|}}
      <OnDateComponent
        @id={{@id}}
        id={{@id}}
        @name={{@name}}
        name={{@name}}
        @onDate={{@onDate}}
        @dateFormat={{this.dateFormat}}
        @handleChange={{this.handleChange}}
        @translations={{@translations}}
        @labels={{@labels}}
        @isDisabled={{@isDisabled}}
        ...attributes
      />
    {{/let}}
  {{/if}}
{{/if}}